<%- include('../includes/head.ejs') %>
  </head>
  <body class="bodyBackground">
  <%- include('../includes/navigation.ejs') %>

    <main>
      <div class="flex justify-center">
        <% if(prods.length > 0) {%>
        <div class="grid grid-cols-1 gap-4 px-12 py-4">
          <% for(let product of prods) { %>
          <a
            href="#"
            class="flex flex-col max-w-xl bg-white border rounded-lg shadow-md md:flex-row md:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
          >
            <img
              class="object-cover w-full rounded-t-lg h-48 md:h-auto md:w-48 md:rounded-none md:rounded-l-lg"
              src="/assets/images/product.jpeg"
              alt=""
            />
            <div class="flex flex-col p-4">
              <h5
                class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
              >
                <%= product.title %>
              </h5>
              <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                Here are the biggest enterprise technology acquisitions of 2021
                so far, in reverse chronological order.
              </p>
            </div>
          </a>
          <% } } else { %>

          <h1 class="text-xl font-latoBold px-4">No Products</h1>
          <% } %>
        </div>
      </div>
    </main>
<%- include('../includes/end.ejs') %>
